<Window x:Name="SplashScreen1" x:Class="Labyrint.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labyrint"
        mc:Ignorable="d"
        Title="SplashScreen" Width="800" Height="450" WindowStartupLocation="CenterScreen" Cursor="None" ResizeMode="NoResize" WindowStyle="None">
    <Grid x:Name="LayoutRoot">

        <Viewbox Name="viewBox" Margin="0" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.CachingHint="Cache" >
            <Canvas Name="canvas" Margin="0" Width="800" Height="450">
                <Rectangle Name="background" Width="300" Height="300" Canvas.Left="250" Canvas.Top="50"/>
                <ProgressBar Name="progressBar" Height="10" Canvas.Left="125" Canvas.Top="371" Width="550" Foreground="#FFFF0043"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
